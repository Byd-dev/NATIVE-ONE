<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_5"
        android:background="@color/home_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"

        >

        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="@string/text_total_profit_loss"
            android:textColor="@color/text_maincolor"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/text_total_profit_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_21"
            android:layout_toRightOf="@+id/text_total"
            android:textColor="@color/text_maincolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_close_all"
            android:layout_width="75dp"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/bg_shape_main_color"
            android:gravity="center"
            android:text="@string/text_all_cloes"
            android:textColor="@color/text_main_color_black"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>