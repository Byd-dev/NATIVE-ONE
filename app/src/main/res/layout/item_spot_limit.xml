<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_spot_limit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/bg_color_left"
        android:orientation="horizontal">

        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_sub_price_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="－"
            android:textColor="@color/text_second_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.pro.bityard.view.DecimalEditText
            android:id="@+id/edit_price_limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/text_price_usdt"
            android:inputType="numberDecimal"
            android:textColor="@color/text_main_color"
            android:textColorHint="@color/text_second_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size_normal" />

        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_add_price_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="@dimen/margin_10"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:text="＋"
            android:textColor="@color/text_second_color"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/bg_color_left"
        android:orientation="horizontal">

        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_sub_amount_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="－"
            android:textColor="@color/text_second_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.pro.bityard.view.DecimalEditText
            android:id="@+id/edit_amount_limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/text_amount_withdrawal"
            android:inputType="numberDecimal"
            android:textColor="@color/text_main_color"
            android:textColorHint="@color/text_second_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size_normal" />

        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_add_amount_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="@dimen/margin_10"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:text="＋"
            android:textColor="@color/text_second_color"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_proportion_limit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_26"
        android:layout_marginLeft="6.5dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="6.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:gravity="center"
        android:background="@drawable/bg_color_left"
        android:orientation="horizontal">


        <com.pro.bityard.view.DecimalEditText
            android:id="@+id/edit_trade_amount_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/text_trade_amount"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:textColor="@color/text_second_color"
            android:textColorHint="@color/text_second_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size_normal" />

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second_color"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="USDT"/>


    </LinearLayout>
</LinearLayout>