<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="469dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@mipmap/my_bg">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="60dp"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@drawable/bg_radius_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_wonderful_unrivalled"
                    android:layout_marginTop="@dimen/margin_50"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:textStyle="bold"
                    android:textColor="@color/text_main_color_black"
                    android:textSize="@dimen/size_bigger" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_my_rate_return"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal_two" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="@string/text_default"
                            android:textStyle="bold"

                            android:textColor="@color/text_quote_green"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/text_lever"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_shape_main_color"
                            android:paddingLeft="@dimen/margin_8"
                            android:paddingRight="@dimen/margin_8"
                            android:text="@string/text_default"
                            android:textColor="@color/text_main_color_black"
                            android:textSize="@dimen/size_big" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginBottom="80dp"
                    android:background="@color/text_second_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:text="@string/text_product"
                            android:textColor="@color/maincolor"
                            android:textSize="@dimen/size_normal_two" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_5"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/text_default"
                                android:textColor="@color/text_main_color_black"
                                android:textSize="@dimen/size_big"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="USDT"
                                android:textColor="@color/text_main_color_black"
                                android:textSize="@dimen/size_big"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_o_price"
                            android:textColor="@color/text_second_color"
                            android:textSize="@dimen/size_normal_two" />

                        <TextView
                            android:id="@+id/text_open_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="@string/text_default"
                            android:textStyle="bold"
                            android:textColor="@color/text_main_color_black"
                            android:textSize="@dimen/size_big" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_15"
                            android:gravity="center"
                            android:text="@string/text_close_price"
                            android:textColor="@color/text_second_color"
                            android:textSize="@dimen/size_normal_two" />


                        <TextView
                            android:id="@+id/text_close_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="@string/text_default"
                            android:textStyle="bold"
                            android:textColor="@color/text_main_color_black"
                            android:textSize="@dimen/size_big" />

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/stay_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_code" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/stay_scan"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_download_app"
                        android:textColor="@color/text_main_color_black"
                        android:textSize="@dimen/size_bigger"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_trade_anytime"
                        android:textColor="@color/text_main_color_black"
                        android:textSize="@dimen/size_big"
                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/text_scan_download"
                android:textSize="@dimen/size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="BITYARD"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/size_big"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>