<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/stay_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/text_start"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_big" />

            <LinearLayout
                android:id="@+id/layout_start"
                android:layout_width="120dp"
                android:layout_height="@dimen/margin_30"
                android:layout_toRightOf="@+id/stay_start"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bg_color_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_spot_switch"/>

                <TextView
                    android:id="@+id/text_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textColor="@color/text_main_color"
                    android:text="2020-02-02"/>



            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/stay_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/text_end"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_big" />

            <LinearLayout
                android:id="@+id/layout_end"
                android:layout_width="120dp"
                android:layout_height="@dimen/margin_30"
                android:layout_toRightOf="@+id/stay_end"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_color_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_spot_switch"/>

                <TextView
                    android:id="@+id/text_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textColor="@color/text_main_color"
                    android:text="2020-02-02"/>



            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:background="@color/home_line" />

</LinearLayout>