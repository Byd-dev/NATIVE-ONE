<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_main_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="@color/text_second_color"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="@string/text_hide_small_coin"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_big" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_shape_cancel"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_15"
            android:visibility="gone"
            android:paddingTop="@dimen/margin_5"
            android:paddingRight="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:text="@string/text_cancel_all"
            android:textColor="@color/maincolor" />


    </RelativeLayout>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:background="@color/home_line" />

</LinearLayout>