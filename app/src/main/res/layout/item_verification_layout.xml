<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_pop_background_white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="@dimen/margin_15"
                android:text="×"
                android:textColor="@color/text_second_color"
                android:textSize="30sp"

                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_42"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_code"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/img_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_code"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20"
                    android:src="@mipmap/icon_refresh" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/bg_shape_edit_white">


                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@null"
                    android:hint="请输入图形验证码"
                    android:maxLines="1"
                    android:textColor="@color/text_main_color_black"
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/hint_size" />

            </RelativeLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/text_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/bg_circle_main_color"
            android:gravity="center"
            android:text="@string/text_sure"
            android:textColor="@color/text_main_color_black"
            android:textSize="@dimen/size_normal" />


    </LinearLayout>
</RelativeLayout>