<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_maincolor"
    android:orientation="vertical">

    <!--bar-->
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_15"
            android:src="@mipmap/img_back" />

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_shape_country">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_arrow"
                android:hint="请输入国家或地区"
                android:maxLines="1"
                android:paddingLeft="@dimen/margin_5"
                android:textColor="@color/text_main_color"
                android:textColorHint="@color/color_hint"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/hint_size" />


        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/color_bg_left"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/margin_15"
        android:text="@string/text_frequently_used"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/hint_size" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text_try"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_try"
            android:layout_centerInParent="true"
            android:textColor="@color/color_hint"
            android:textSize="15sp"
            android:padding="@dimen/margin_40"
            android:visibility="gone"
            />



    </RelativeLayout>


</LinearLayout>