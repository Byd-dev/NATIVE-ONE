<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_share"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="分享到"
            android:textColor="@color/text_maincolor"
            android:textSize="@dimen/size_normal_two" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_wechat"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_circle"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="微信朋友圈"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_facebook"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="Facebook"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"

                />

            <TextView
                android:id="@+id/text_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_facebook"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:text="@string/text_save_img"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"

                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line_big"
            android:background="@color/home_line" />

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:gravity="center"
            android:text="@string/text_tip_cancel"
            android:textColor="@color/text_second_color" />

    </LinearLayout>


</RelativeLayout>