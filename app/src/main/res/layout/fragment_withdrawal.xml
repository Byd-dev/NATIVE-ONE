<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_maincolor"
    android:orientation="vertical">


    <!--bar-->
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_15"
            android:src="@mipmap/img_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_withdrawal"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/text_transfer_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:gravity="center"
                android:text="@string/text_internal_funds_transfer"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/title_size"
                android:visibility="gone" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:src="@mipmap/icon_record_white"
            android:visibility="gone" />


    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line_big"
        android:background="@color/home_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/layout_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <include layout="@layout/bar_usdt" />

                <include layout="@layout/layout_line" />

                <include layout="@layout/bar_lian" />


                <include layout="@layout/layout_line" />

                <include layout="@layout/bar_amount" />

                <include layout="@layout/layout_line" />

                <LinearLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/text_usdt_address"
                        android:maxLines="2"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_size" />

                    <ImageView
                        android:id="@+id/img_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:src="@mipmap/icon_market_right" />


                    <TextView
                        android:id="@+id/text_address_manage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:text="@string/text_manage_address"
                        android:textColor="@color/maincolor"
                        android:textSize="@dimen/size_big" />


                </LinearLayout>

                <include layout="@layout/layout_line" />

                <include layout="@layout/bar_fund_pass" />

                <include layout="@layout/layout_line" />

                <include layout="@layout/bar_email_mobile_code" />

                <include layout="@layout/layout_line" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:gravity="center"
                        android:text="@string/text_withdrawal_limit"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal_two" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:gravity="center"
                        android:text="10000 USDT"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal_two" />

                </RelativeLayout>

                <include layout="@layout/layout_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:gravity="center"
                        android:text="@string/text_service_pop"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal_two" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:gravity="center"
                        android:text="2 USDT"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal_two" />

                </RelativeLayout>

                <include layout="@layout/layout_line" />
                <!--登录button-->
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_btn"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_40"
                    android:background="@drawable/sel_switcher_enabled_bg"
                    android:enabled="false"
                    android:padding="10dp"
                    android:text="@string/text_sure"
                    android:textColor="@color/color_btn_text"
                    android:textSize="16sp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_line_big"
                    android:background="@color/home_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_30"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_important"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_withdrawal_tip_one"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_withdrawal_tip_two"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/bar_usdt" />

                <include layout="@layout/layout_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_amount_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/text_transfer_amount"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/text_available_money"
                            android:textColor="@color/text_second_color"
                            android:textSize="@dimen/size_big" />

                        <TextView
                            android:id="@+id/text_balance_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/text_default"
                            android:textColor="@color/maincolor"
                            android:textSize="@dimen/size_big" />

                    </LinearLayout>


                </LinearLayout>

                <include layout="@layout/layout_line" />

                <include layout="@layout/bar_nickname_input" />

                <include layout="@layout/layout_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_pass_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/text_pin"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_size" />


                    <ImageView
                        android:id="@+id/img_eye_transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:src="@mipmap/icon_eye_close" />


                </LinearLayout>

                <include layout="@layout/layout_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup"
                    android:orientation="horizontal"

                    >

                    <EditText
                        android:id="@+id/edit_code_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/text_email_code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_size" />

                    <TextView
                        android:id="@+id/text_getCode_transfer"
                        android:layout_width="89dp"
                        android:layout_height="@dimen/margin_30"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@drawable/sel_switcher_round_bg"
                        android:gravity="center"
                        android:text="@string/text_get_code"
                        android:textColor="@color/color_code"
                        android:textSize="@dimen/size_normal" />


                </LinearLayout>

                <include layout="@layout/layout_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawablePadding="@dimen/margin_16"
                        android:gravity="center"
                        android:text="转账限额"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal_two" />


                    <TextView
                        android:id="@+id/text_today_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:text="10-100000 USDT"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_big" />


                </RelativeLayout>

                <include layout="@layout/layout_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_setup">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawablePadding="@dimen/margin_16"
                        android:gravity="center"
                        android:text="@string/text_service_pop"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal_two" />


                    <TextView
                        android:id="@+id/text_total_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:text="@string/text_free"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_big" />


                </RelativeLayout>

                <include layout="@layout/layout_line" />


                <!--登录button-->
                <Button
                    android:id="@+id/btn_submit_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_btn"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_40"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/sel_switcher_enabled_bg"
                    android:enabled="false"
                    android:padding="10dp"
                    android:text="@string/text_sure"
                    android:textColor="@color/white"
                    android:textSize="16sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_important"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:text="@string/text_sure_info"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</LinearLayout>