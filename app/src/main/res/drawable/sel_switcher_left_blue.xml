<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">

        <shape>
            <corners android:bottomLeftRadius="@dimen/radius_size" android:topLeftRadius="@dimen/radius_size"

                />



            <gradient android:startColor="@color/color_blue_deep"
                android:endColor="@color/color_blue"
                android:angle="90"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/radius_size" android:topLeftRadius="@dimen/radius_size"

                />
            <gradient
                android:angle="180"
                android:endColor="#2D446B"
                android:startColor="#071636" />
            <stroke android:width="1dp" android:color="#688494" />
        </shape>
    </item>

</selector>