<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_view"
    android:background="@color/background_maincolor"
    android:orientation="vertical">


    <include layout="@layout/layout_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/bar_usdt" />

            <include layout="@layout/layout_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_funds_height"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_chain_name"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal_two" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"

                        />

                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/layout_line" />

          <include layout="@layout/bar_amount"/>

            <include layout="@layout/layout_line" />

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/text_usdt_address"
                    android:maxLines="2"
                    android:textColor="@color/text_main_color"
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/hint_size" />

                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:src="@mipmap/icon_market_right"/>


                <TextView
                    android:id="@+id/text_address_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_15"
                    android:paddingRight="@dimen/margin_15"
                    android:text="@string/text_manage_address"
                    android:textColor="@color/maincolor"
                    android:textSize="@dimen/size_big" />


            </LinearLayout>

            <include layout="@layout/layout_line" />

            <include layout="@layout/bar_fund_pass" />

            <include layout="@layout/layout_line" />

            <include layout="@layout/bar_email_mobile_code" />

            <include layout="@layout/layout_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:gravity="center"
                    android:text="@string/text_withdrawal_limit"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal_two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:gravity="center"
                    android:text="10000 USDT"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />

            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:gravity="center"
                    android:text="@string/text_service_pop"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal_two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:gravity="center"
                    android:text="2 USDT"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />

            </RelativeLayout>

            <include layout="@layout/layout_line" />
            <!--登录button-->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_btn"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_40"
                android:background="@drawable/sel_switcher_enabled_bg"
                android:enabled="false"
                android:padding="10dp"
                android:text="@string/text_sure"
                android:textColor="@color/color_btn_text"
                android:textSize="16sp"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line_big"
                android:background="@color/home_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_30"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_important"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_withdrawal_tip_one"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_withdrawal_tip_two"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>