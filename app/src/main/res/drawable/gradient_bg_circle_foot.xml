<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/margin_50"/>

            <gradient
                android:type="linear"
                android:startColor="#F9A36D"
                android:endColor="#E2497B"
                android:angle="90" />

        </shape>
    </item>

    <item android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/margin_50"/>

            <solid android:color="@color/background_main_color"/>

            <padding android:top="12dp"
                android:bottom="12dp"/>

        </shape>
    </item>
</layer-list>