<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:background="@drawable/bg_color_left"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/text_buy"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_normal_two"
            android:typeface="monospace" />

        <RadioButton
            android:id="@+id/radio_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/text_sell"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_normal_two"
            android:typeface="monospace" />


    </RadioGroup>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/bg_color_left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="限价单"
            android:textSize="@dimen/size_normal_two"
            android:textColor="@color/text_main_color"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_trade_triangle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"/>





    </RelativeLayout>


</LinearLayout>