<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_spot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_product_spot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_two_way" />

            <TextView
                android:id="@+id/text_name_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:gravity="center"
                android:text="BTC"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/title_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_currency_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text_name_spot"
                android:gravity="center"
                android:text="@string/text_usdt"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/title_size" />


        </LinearLayout>

        <ImageView
            android:id="@+id/img_market"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:src="@mipmap/icon_market" />


    </RelativeLayout>
    <include layout="@layout/layout_line_big"/>

</LinearLayout>