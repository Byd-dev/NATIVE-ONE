<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@drawable/bg_kuang_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_pop"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_3"

                android:layout_height="match_parent" />

        </RelativeLayout>

        <!--退出登录button-->
        <Button
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_btn"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/bg_shape_main_color"
            android:padding="10dp"
            android:text="@string/text_simulation_btn"
            android:textColor="@color/color_btn_text"
            android:textSize="16sp"

            />


    </LinearLayout>


</LinearLayout>