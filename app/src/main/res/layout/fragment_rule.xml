<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_maincolor"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_trade_rule"
                    android:textColor="@color/maincolor"
                    android:textSize="@dimen/size_normal_two" />




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:background="@color/home_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/color_bg_left"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_buy_price"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_open_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_price"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_line"
                android:background="@color/home_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_stoploss_price"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_loss_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_profit_price"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_profit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_lever"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_lever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_qty"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two"
                   />


                <TextView
                    android:id="@+id/text_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_frozen"
                        android:textColor="@color/text_maincolor"
                        android:textSize="@dimen/size_normal"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/text_margin"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal_two" />
                </LinearLayout>


                <TextView
                    android:id="@+id/text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_paid"
                        android:textColor="@color/text_maincolor"
                        android:textSize="@dimen/size_normal"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:gravity="center"
                        android:text="@string/text_service_pop"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal_two" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_o_n_fee"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_o_n_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_o_n"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_o_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_currency_type"
                    android:textColor="@color/text_second_color"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_currency_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:id="@+id/stay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_open_time"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/stay_time"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_setup">

                <TextView
                    android:id="@+id/stay_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:drawablePadding="@dimen/margin_16"
                    android:gravity="center"
                    android:text="@string/text_order_id"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_normal_two" />


                <TextView
                    android:id="@+id/text_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/stay_id"
                    android:text="@string/text_default"
                    android:textColor="@color/text_maincolor"
                    android:textSize="@dimen/size_big" />


            </RelativeLayout>

            <include layout="@layout/layout_line" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>