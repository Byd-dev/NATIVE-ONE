<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--账户-->
    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_25"
        android:orientation="vertical">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_email"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal"

            />

        <LinearLayout
            android:id="@+id/layout_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit"
            android:layout_marginTop="@dimen/margin_10"

            >

            <EditText
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@null"
                android:hint="@string/text_email_input"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/text_main_color"
                android:textColorHint="@color/color_hint"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/hint_size" />


        </LinearLayout>

        <View
            android:id="@+id/line_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/home_line" />

        <View
            android:id="@+id/line_email_err"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/color_err"
            android:visibility="gone" />
        <!--错误提示 忘记密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_20"

            >

            <com.pro.bityard.view.textview.ManropeTextView
                android:id="@+id/text_err_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:text="@string/text_err_email"
                android:textColor="@color/color_err"
                android:textSize="@dimen/size_normal"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>