<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/bg_kuang_background"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/text_one_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_1h"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal" />

        <View
            android:layout_width="@dimen/size_line"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"

            android:background="@color/home_line" />

        <TextView
            android:id="@+id/text_one_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_1day"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal" />

        <View
            android:layout_width="@dimen/size_line"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"

            android:background="@color/home_line" />

        <TextView
            android:id="@+id/text_one_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_1week"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal" />

        <View
            android:layout_width="@dimen/size_line"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"

            android:background="@color/home_line" />

        <TextView
            android:id="@+id/text_one_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_1month"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal" />


    </LinearLayout>


</LinearLayout>