<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_maincolor"
    android:orientation="vertical"


    >
    <!--bar-->
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_15"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_bind_email"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/title_size" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line_big"
        android:background="@color/home_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layout_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--手机号码-->
            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_email"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edit"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_shape_edit">

                    <EditText
                        android:id="@+id/edit_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@null"
                        android:hint="@string/text_email_input"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_size" />


                </LinearLayout>


            </LinearLayout>

            <!--手机验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_email_code"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edit"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_shape_edit"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/text_email_code_input"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/hint_size" />

                    <TextView
                        android:id="@+id/text_getCode"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_shape_code"
                        android:gravity="center"
                        android:text="@string/text_get_code"
                        android:textColor="@color/color_code"
                        android:textSize="@dimen/size_normal" />


                </LinearLayout>


            </LinearLayout>




            <!--登录button-->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_btn"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_15"
                android:background="@drawable/sel_switcher_enabled_bg"
                android:padding="10dp"
                android:enabled="false"
                android:text="@string/text_sure"
                android:textColor="@color/color_btn_text"
                android:textSize="16sp"

                />



        </LinearLayout>
    </ScrollView>

</LinearLayout>