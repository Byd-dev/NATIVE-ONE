<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="426dp"
        android:layout_centerInParent="true"
        android:background="@color/background_main_color"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:background="@color/edit_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_spsl"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_normal"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_20">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="BTC"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_big"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/text_name_usdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_name"
                android:text="/USDT"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_big"
                android:typeface="monospace" />

            <ImageView
                android:id="@+id/img_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_9"
                android:layout_toRightOf="@+id/text_name_usdt"

                />

            <TextView
                android:id="@+id/text_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_15"
                android:text="--"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_normal"
                android:typeface="monospace" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/margin_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_o_price"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"
                android:typeface="monospace"

                />

            <TextView
                android:id="@+id/text_open_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="--"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"
                android:typeface="monospace"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/margin_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_price"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"
                android:typeface="monospace"

                />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="--"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"
                android:typeface="monospace"

                />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="14dp"
            android:background="@color/edit_color"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/radio_0"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/text_amount_tab"
                    android:textColor="@color/sel_switcher_txt_night"
                    android:textSize="@dimen/size_normal"
                    android:typeface="monospace"

                    />


                <RadioButton
                    android:id="@+id/radio_1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/text_price_tab"
                    android:textColor="@color/sel_switcher_txt_night"
                    android:textSize="@dimen/size_normal"
                    android:typeface="monospace"

                    />


            </RadioGroup>


        </RelativeLayout>
        <!--中间的布局-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--金额-->
            <include layout="@layout/layout_spsl_amount"/>
            <!--价格-->
            <include layout="@layout/layout_spsl_price"
                />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/edit_color"
                android:gravity="center"
                android:text="@string/text_cancel_position"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_normal" />

            <TextView
                android:id="@+id/text_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/maincolor"
                android:gravity="center"
                android:text="@string/text_sure"
                android:textColor="@color/text_main_color_black"
                android:textSize="@dimen/size_normal" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>