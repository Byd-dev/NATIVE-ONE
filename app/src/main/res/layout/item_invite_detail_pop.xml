<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_color"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />
    <!--持仓 挂单 历史-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_referrals"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


            <com.pro.bityard.view.textview.ManropeTextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:text="@string/text_default"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_big" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:background="@color/home_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_commission"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:background="@color/home_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_today_volume"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_today_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_today_fee"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_today_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_total_volume"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_total_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_total_orders"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_total_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_registration_time"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_register_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <com.pro.bityard.view.textview.ManropeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_last_login"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal_two" />


        <com.pro.bityard.view.textview.ManropeTextView
            android:id="@+id/text_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />


    <!--登录button-->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_btn"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/bg_shape_green_record"
        android:padding="10dp"
        android:text="@string/text_trransfer"
        android:textColor="@color/white"
        android:textSize="16sp"

        />

</LinearLayout>