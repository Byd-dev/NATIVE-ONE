<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/background_main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.pro.bityard.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_my_bityard" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/size_normal"
                    android:typeface="monospace"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:text="@string/text_copy_trade_amount_item"
                        android:textColor="@color/text_second_color"
                        android:textSize="@dimen/size_normal"
                        android:typeface="monospace"

                        />

                    <TextView
                        android:id="@+id/text_copy_trade_amount_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/size_normal"
                        android:typeface="monospace"

                        />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center"
            android:background="@color/home_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_income_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/margin_15"
                android:text="--"
                android:textColor="@color/text_quote_green"
                android:textSize="20sp"
                android:typeface="monospace" />


            <TextView
                android:id="@+id/text_rate_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:text="@string/text_income_rate"
                android:textColor="@color/text_second_color"
                android:textSize="@dimen/size_normal"
                android:typeface="monospace"

                />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_line" />


</LinearLayout>