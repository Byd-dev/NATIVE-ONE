<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--bar-->
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_15"
            android:src="@mipmap/img_back" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/text_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="@string/text_sure"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:visibility="gone"
            android:textColor="@color/text_quote_green"
            android:textSize="@dimen/size_normal_two" />


        <ImageView
            android:id="@+id/img_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_service"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_record_white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_register"
            android:textColor="@color/maincolor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_15"
            android:textSize="@dimen/size_normal_two"
            android:paddingLeft="@dimen/margin_15"
            android:gravity="center"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/text_cancel_follow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_follow_cancel"
            android:textColor="@color/text_quote_green"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_15"
            android:textSize="@dimen/size_normal_two"
            android:paddingLeft="@dimen/margin_15"
            android:gravity="center"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_filter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_15"
            android:drawableRight="@mipmap/icon_circle_filter"
            android:textColor="@color/text_main_color"
            android:visibility="gone"
            android:textSize="@dimen/size_normal_two" />

        <ImageView
            android:id="@+id/img_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_warning_green"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:visibility="gone"
            />

    </RelativeLayout>

   <include layout="@layout/layout_line_big"/>
</LinearLayout>