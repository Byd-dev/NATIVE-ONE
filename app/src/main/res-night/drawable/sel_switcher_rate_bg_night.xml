<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/margin_2"/>
            <stroke android:width="@dimen/size_frame" android:color="@color/maincolor" />
            <solid android:color="@color/background_main_color_night"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/margin_2"/>
            <stroke android:width="@dimen/size_frame" android:color="@color/background_main_color_night"/>
            <solid android:color="@color/background_main_color_night"/>
        </shape>
    </item>
</selector>