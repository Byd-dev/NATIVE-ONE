<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_30"
            android:src="@mipmap/icon_trade_triangle_pop" />


        <LinearLayout
            android:id="@+id/layout_lever_market"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_triangle"
            android:background="@drawable/bg_kuang_second_color"
            android:orientation="vertical"
            android:visibility="visible">



            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/radio_quick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_30"
                    android:paddingRight="@dimen/margin_30"
                    android:text="@string/text_quick"
                    android:textColor="@color/sel_switcher_txt"
                    android:textSize="14sp"
                    android:typeface="monospace"

                    />


                <RadioButton
                    android:id="@+id/radio_lever"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_30"
                    android:paddingRight="@dimen/margin_30"
                    android:text="@string/text_lever"
                    android:textColor="@color/sel_switcher_txt"
                    android:textSize="@dimen/size_normal_two"
                    android:typeface="monospace"

                    />


            </RadioGroup>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"

                />


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>