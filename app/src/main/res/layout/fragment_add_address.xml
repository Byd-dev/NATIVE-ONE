<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_maincolor"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawableLeft="@mipmap/icon_usdt"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_usdt_tether_us"
            android:textColor="@color/text_maincolor"
            android:textSize="@dimen/size_normal_two" />


        <TextView
            android:id="@+id/text_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_default"
            android:textColor="@color/text_maincolor"
            android:textSize="@dimen/size_big"
            android:visibility="gone" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_funds_height"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_chain_name"
            android:textColor="@color/text_maincolor"
            android:textSize="@dimen/size_normal_two" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"

                />

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/text_enter"
            android:maxLines="1"
            android:textColor="@color/text_maincolor"
            android:textColorHint="@color/color_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/hint_size" />


    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/text_address_tag"
            android:maxLines="1"
            android:textColor="@color/text_maincolor"
            android:textColorHint="@color/color_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/hint_size" />


    </LinearLayout>

    <include layout="@layout/layout_line" />

    <!--登录button-->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_btn"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/sel_switcher_enabled_bg"
        android:enabled="false"
        android:padding="10dp"
        android:text="@string/text_sure"
        android:textColor="@color/color_btn_text"
        android:textSize="16sp"

        />

</LinearLayout>