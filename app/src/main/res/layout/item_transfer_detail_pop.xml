<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_color"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />
    <!--持仓 挂单 历史-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_referrals_user"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_normal_two" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:text="@string/text_default"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/size_big" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:background="@color/home_line" />

    <include layout="@layout/bar_usdt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_line"
        android:background="@color/home_line" />

    <include layout="@layout/bar_amount" />

    <include layout="@layout/layout_line" />

    <include layout="@layout/bar_fund_pass" />

    <include layout="@layout/layout_line" />

    <include layout="@layout/bar_email_mobile_code" />

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="转账限额"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_normal_two" />


        <TextView
            android:id="@+id/text_today_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="10-100000 USDT"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_setup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:text="@string/text_service_pop"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_normal_two" />


        <TextView
            android:id="@+id/text_total_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:text="@string/text_free"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_big" />


    </RelativeLayout>

    <include layout="@layout/layout_line" />


    <!--登录button-->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_btn"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/sel_switcher_enabled_bg"
        android:enabled="false"
        android:padding="10dp"
        android:text="@string/text_sure"
        android:textColor="@color/white"
        android:textSize="16sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_important"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="@string/text_sure_info"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/size_normal" />

    </LinearLayout>


</LinearLayout>